<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="FirstPluginForShopware\Core\Content\FirstPlugin\FirstPluginDefinition">
            <tag name="shopware.entity.definition" entity="first_plugin" />
        </service>

        <service id="FirstPluginForShopware\Core\Api\DemoDataController" public="true">
            <argument id="country.repository" type="service" />
            <argument id="first_plugin.repository" type="service" />

            <call method="setContainer">
                    <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>